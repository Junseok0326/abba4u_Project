<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">#ff6767</item>
        <item name="android:textColorSecondary">#bfc2c7</item>
        <item name="colorAccent">#ff6767</item>
    </style>

    <!--로그인 Activity-->
    <style name="LoginTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/login_color</item>
        <item name="colorControlActivated">@color/login_color</item>
        <item name="colorControlHighlight">@color/login_color</item>
        <item name="android:textColorHint">#66000000</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">#66000000</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="LoginBtnTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent">#ff6767</item>
    </style>

    <!--설명작성 Dialog-->
    <style name="DescriptionTheme" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#66000000</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/descriptionDialog_color</item>
        <item name="colorControlNormal">#66000000</item>
        <item name="colorControlHighlight">@color/descriptionDialog_color</item>
        <item name="colorControlActivated">@color/descriptionDialog_color</item>
    </style>
</resources>
